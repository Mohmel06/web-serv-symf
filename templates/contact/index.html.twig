{% extends 'base.html.twig' %}

{% block title %}Contact index{% endblock %}

{% block body %}
    <h1>Contact index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Email</th>
                <th>Contenu</th>
                <th>Message</th>
                <th>Created</th>
                <th>Modified</th>
                <th>Public</th>
                <th>Lu</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for contact in contacts %}
            <tr>
                <td>{{ contact.id }}</td>
                <td>{{ contact.nom }}</td>
                <td>{{ contact.email }}</td>
                <td>{{ contact.contenu }}</td>
                <td>{{ contact.message }}</td>
                <td>{{ contact.created ? contact.created|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ contact.modified ? contact.modified|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ contact.public ? 'Yes' : 'No' }}</td>
                <td>{{ contact.lu ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_contact_show', {'id': contact.id}) }}">show</a>
                    <a href="{{ path('app_contact_edit', {'id': contact.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_contact_new') }}">Create new</a>
{% endblock %}
